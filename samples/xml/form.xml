<?xml version="1.0" encoding="UTF-8"?>
<frame name="frame" size="400,200" title="JGoodies FormLayout Sample"
    defaultCloseOperation="JFrame.EXIT_ON_CLOSE"
    plaf="com.sun.java.swing.plaf.windows.WindowsLookAndFeel">

  <panel border="EmptyBorder(10,10,10,10)">
    <layout type="FormLayout"
        columns="right:max(40dlu;pref), 3dlu, d:grow, 7dlu, right:pref, 3dlu, d:grow"
        rows="p, 3dlu, p, 3dlu, p, 9dlu, p, 3dlu, p, 3dlu, p"
        columnGroups="1,5; 3,7" />

    <titledseparator constraints="1,1,7,1" text="General"/>
    <label     constraints="1,3" text="Company"/>
    <textfield constraints="3,3,5,1"/>
    <label     constraints="1,5" text="Contact"/>
    <textfield constraints="3,5,5,1"/>

    <titledseparator constraints="1,7,7,1" text="Propeller"/>
    <label     constraints="1,9" text="PTI [kW]"/>
    <textfield constraints="3,9"/>
    <label     constraints="5,9" text="Power [kW]"/>
    <textfield constraints="7,9"/>
    <label     constraints="1,11" text="R [mm]"/>
    <textfield constraints="3,11"/>
    <label     constraints="5,11" text="D [mm]"/>
    <textfield constraints="7,11"/>
  </panel>
</frame>
